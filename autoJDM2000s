        <script>
            function changeHeaderImage(car) {
                var header = document.getElementById('main-header');
                switch(car) {
                    case 'supra':
                        header.style.backgroundImage = "url('img/supra.jpg')";
                        break;
                    case 'skyline':
                        header.style.backgroundImage = "url('img/skyline.jpg')";
                        break;
                    case 's2000':
                        header.style.backgroundImage = "url('img/s2000.jpg')";
                        break;
                    case 'nsx':
                        header.style.backgroundImage = "url('img/nsx.jpg')";
                        break;
                    case 'rx7':
                        header.style.backgroundImage = "url('img/rx7.jpg')";
                        break;
                    case '370z':
                        header.style.backgroundImage = "url('img/370z.jpg')";
                        break;
                    case '3000gt':
                        header.style.backgroundImage = "url('img/3000gt.jpg')";
                        break;
                    case 'silvia':
                        header.style.backgroundImage = "url('img/silvia.jpg')";
                        break;
                    default:
                        header.style.backgroundImage = "url('img/carritos.jpg')";
                }
            }

            // Datos de ejemplo para la gráfica
            var carData = {
                labels: ['Toyota Supra', 'Nissan Skyline GT-R', 'Honda S2000', 'Honda NSX', 'Mazda RX-7', 'Nissan 370Z', 'Mitsubishi 3000GT', 'Nissan Silvia S15'],
                datasets: [{
                    label: 'Potencia (HP)',
                    data: [320, 276, 240, 290, 276, 332, 320, 250],
                    backgroundColor: [
                        '#000000', '#9c0808', '#000000', '#9c0808', '#000000', '#9c0808', '#000000', '#9c0808'
                    ]
                }]
            };

            // Configuración de la gráfica
            var ctx = document.getElementById('carChart').getContext('2d');
            var carChart = new Chart(ctx, {
                type: 'bar',
                data: carData,
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });
        </script>
